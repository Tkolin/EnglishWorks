<Page x:Class="EnglishWorks.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnglishWorks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="AliceBlue">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="0,0,0,50"/>
            <TextBlock Text="Логин:" />
            <TextBox x:Name="TBoxLogin"  Margin="0,0,0,15"/>
            <TextBlock  Text="Пароль:"/>
            <TextBox x:Name="TBoxPassword"  Margin="0,0,0,15"/>
            <Button Content="Вход" x:Name="nextBtn" Click="nextBtn_Click"  Margin="5"/>
            <Button Content="Назад" x:Name="backBtn" Click="exitBtn_Click" Margin="5"/>
        </StackPanel>

    </Grid>
</Page>
