<Page x:Class="EnglishWorks.AddEditTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnglishWorks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditTaskPage" Background="AliceBlue" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" Width="300">
            <TextBlock Text="Задания" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock Margin="5,0,0,0">Название</TextBlock>
            <TextBox Margin="0,0,0,5" x:Name="nameTBox"/>
            <TextBlock Margin="5,0,0,0">Содержание</TextBlock>
            <TextBox Margin="0,0,0,5" x:Name="contentTBox"/>
            <TextBlock Margin="5,0,0,0">Описание</TextBlock>
            <TextBox Margin="0,0,0,5" x:Name="descTBox"/>
            <TextBlock Margin="5,0,0,0">Тип задания</TextBlock>
            <ComboBox Margin="0,0,0,5" x:Name="typeCbox"/>
            
            <Button Width ="120" Margin="3" x:Name="backBtn" Click="backBtn_Click">Отмена</Button>
            <Button Width ="120" Margin="3" x:Name="saveBtn" Click="saveBtn_Click">Сохранить</Button>
        </StackPanel>
        
    </Grid>
</Page>
